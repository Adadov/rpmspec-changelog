{
	"name": "rpmspec-changelog",
	"displayName": "RPMSpec Snippets and Mock build",
	"description": "Inserts a properly formatted changelog line to your RPM spec file for you. Can also run mock directly for one or many OS",
	"version": "1.4.0",
	"publisher": "adadov",
	"repository": {
		"type": "https",
		"url": "https://github.com/Adadov/rpmspec-changelog"
	},
	"bugs": {
		"url": "https://github.com/Adadov/rpmspec-changelog/issues"
	},
	"engines": {
		"vscode": "^1.96.0"
	},
	"categories": [
		"Snippets",
		"Other"
	],
	"activationEvents": [
		"onCommand:workbench.action.tasks.runTask"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "rpmspecChangelog.insertRPMSpecChangelog",
				"title": "RPM: Insert Changelog"
			},
			{
				"command": "rpmspecChangelog.runMock",
				"title": "Mock: Run for ..."
			}
		],
		"configuration": {
			"title": "RPMSpec Changelog",
			"properties": {
				"rpmspecChangelog.debug": {
					"type": "boolean",
					"description": "Show more logs",
					"default": false
				},
				"rpmspecChangelog.mockOses": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"description": "Mock configurations list",
					"order": 1,
					"scope": "application"
				},
				"rpmspecChangelog.showAll": {
					"type": "boolean",
					"description": "All to run mock for all OS at once",
					"default": false
				},
				"rpmspecChangelog.maintainerName": {
					"type": "string",
					"description": "Use this instead of git config user.name",
					"order": 2,
					"scope": "application"
				},
				"rpmspecChangelog.maintainerEmail": {
					"type": "string",
					"description": "Use this instead of git config user.email",
					"order": 3,
					"scope": "application"
				}
			}
		},
		"taskDefinitions": [
			{
				"type": "rpmbuild",
				"properties": {
					"version": {
						"type": "number",
						"description": "OS version"
					},
					"download": {
						"type": "boolean",
						"default": false,
						"description": "Download sources"
					},
					"type": {
						"type": "string",
						"default": "rpmbuild",
						"description": ""
					},
					"os": {
						"type": "string",
						"description": "Mock OS configuration (ex: alma+epel)"
					},
					"arch": {
						"type": "string",
						"default": "x86_64",
						"description": "Destination arch"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"vscode:publish": "vsce package && eval $([ -e .tokens ] && cat .tokens); export VSCE_PAT; vsce publish",
		"compile": "tsc -p ./",
		"lint": "eslint -c .eslintrc.json src/*.ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint"
	},
	"extensionDependencies": [
		"rvsmartporting.rpm-spec-ext"
	],
	"devDependencies": {
		"@types/node": "^18.19.68",
		"@types/vscode": "^1.96.0",
		"@typescript-eslint/eslint-plugin": "^8.18.2",
		"@typescript-eslint/parser": "^8.18.2",
		"@vscode/test-electron": "^2.4.1",
		"eslint": "^8.57.1"
	}
}
