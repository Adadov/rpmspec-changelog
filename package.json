{
	"name": "rpmspec-changelog",
	"displayName": "RPMSpec Changelog",
	"description": "Inserts a properly formatted changelog line to your RPM spec file for you.",
	"version": "1.2.1",
	"publisher": "adadov",
	"repository": {
		"type": "https",
		"url": "https://github.com/Adadov/rpmspec-changelog"
	},
	"bugs": {
		"url": "https://github.com/Adadov/rpmspec-changelog/issues"
	},
	"engines": {
		"vscode": "^1.82.0"
	},
	"categories": [
		"Snippets",
		"Other"
	],
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.insertRPMSpecChangelog",
				"title": "RPM: Insert Changelog"
			}
		],
		"configuration": {
			"title": "RPMSpec Changelog",
			"properties": {
				"rpmspecChangelog.obtainNameAndEmailFromGit": {
					"type": "boolean",
					"default": true,
					"description": "Use git developper informations (Only if manual field is empty)",
					"order": 2,
					"scope": "resource"
				},
				"rpmspecChangelog.maintainerName": {
					"type": "string",
					"description": "Disable git for name",
					"order": 1,
					"scope": "resource"
				},
				"rpmspecChangelog.maintainerEmail": {
					"type": "string",
					"description": "Disable git for email",
					"order": 2,
					"scope": "resource"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint -c .eslintrc.json src/*.ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint"
	},
	"devDependencies": {
		"@types/node": "^18.19.63",
		"@types/vscode": "^1.95.0",
		"@typescript-eslint/eslint-plugin": "^8.12.2",
		"@typescript-eslint/parser": "^8.12.2",
		"@vscode/test-electron": "^2.4.1",
		"eslint": "^8.57.1"
	}
}
